<% include ./partials/header %>

<div class="container">

  <h1><%= movie_details["Title"] %></h1>

  <div class="card details-card">

    <div class="embed-responsive embed-responsive-16by9">
      <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= movie_data_youtube["items"][0]["id"]["videoId"] %>" onerror="this.src='img/no_trailer.png'" allowfullscreen></iframe>
    </div>

    <div class="card-block">
      <p class="card-text details-plot"><%= movie_details["Plot"] %></p>
    </div>

    <div class="card-block details-table">
      <div class="card-group">

        <div class="card">
          <table class="table">
            <tbody>
              <tr>
                <td>Year:</td>
                <td><%= movie_details["Year"] %></td>
              </tr>
              <tr>
                <td>Runtime:</td>
                <td><%= movie_details["Runtime"] %></td>
              </tr>
              <tr>
                <td>Language:</td>
                <td><%= movie_details["Language"] %></td>
              </tr>
              <tr>
                <td>Genre:</td>
                <td><%= movie_details["Genre"] %></td>
              </tr>
              <tr>
                <td>Actors:</td>
                <td><%= movie_details["Actors"] %></td>
              </tr>
              <tr>
                <td></td>
                <td></td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="card">
          <table class="table">
            <tbody>
              <tr>
                <td>Rated:</td>
                <td><%= movie_details["Rated"] %></td>
              </tr>
              <tr>
                <td>Director:</td>
                <td><%= movie_details["Director"] %></td>
              </tr>
              <tr>
                <td>imdbRating:</td>
                <td><%= movie_details["imdbRating"] %></td>
              </tr>
              <tr>
                <td>Writer:</td>
                <td><%= movie_details["Writer"] %></td>
              </tr>
              <tr>
                <td>Awards:</td>
                <td><%= movie_details["Awards"] %></td>
              </tr>
              <tr>
                <td></td>
                <td></td>
              </tr>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>

<% include ./partials/footer %>